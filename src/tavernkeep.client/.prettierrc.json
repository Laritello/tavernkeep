{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "endOfLine": "crlf",
  "semi": true,
  "trailingComma": "es5",
  "tabWidth": 4,
  "singleQuote": true,
  "printWidth": 120,
  "importOrder": [ "^@/(.*)$", "^@/(.*).vue$", "^[./]" ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": false  
}
